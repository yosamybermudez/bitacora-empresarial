{% extends 'mod_inventario/_template.html.twig' %}

{% set title = app.request.get('_route') | get_action ~ 'almac√©n' %}

{% block content %}
    {{ form_start(form, { 'attr' : { 'data-role': 'validator' } }) }}
    <div class="d-flex flex-align-center p-2 bg-white mb-3">
        <a href="{{ path('app_mod_inventario_almacen_index') }}" class="button square outline"><span class="mif-arrow-left"></span></a>
        <span class="ml-2 text-leader">{{ title }}</span>
        <div class="ml-auto">
            <button type="submit" title="Guardar" class="button square primary"><span class="mif-checkmark"></span></button>
        </div>

    </div>
    <div class="bg-white p-3">
        {{ form_start(form, { 'attr' : { 'data-role': 'validator' } }) }}
        <div class="row">
            <div class="cell-md-3">{{ form_row(form.codigo) }}</div>
            <div class="cell-md-9">{{ form_row(form.nombre) }}</div>
        </div>
        <div class="row">
            <div class="cell-md-12">{{ form_row(form.descripcion) }}</div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}